{{/* i3 configs */}}
{{ define "i3" }}
	.config/i3
	.config/rofi
	.bin/screens*
{{ end }}

{{/* ignore these if no graphical environment is installed */}}
{{ if .headless }}
	{{ template "flatpak" }}
	{{ template "i3" }}
	.bin/openbrowser
	.bin/usershutdown
	.bin/userhibernate
{{ else }}
	{{/* ignore these if flatpak is not installed */}}
	{{ if not (lookPath "flatpak") }}
		{{ template "flatpak" }}
	{{ end }}
	{{/* ignore these if i3 is not installed */}}
	{{ if not (lookPath "i3") }}
		{{ template "i3" }}
	{{ end }}
{{ end }}

{{/* Git config; ignore if git is not installed */}}
{{ if not (lookPath "git") }}
	.gitconfig
{{ end }}
