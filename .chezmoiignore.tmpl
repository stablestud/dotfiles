{{/* flatpak dependent configs */}}
{{ define "flatpak" }}
	.var/app/**
	.bin/qutebrowser-clean
{{ end }}

{{/* i3 configs */}}
{{ define "i3" }}
	.config/i3/**
	.config/rofi/**
	.xsession
{{ end }}

{{/* fonts files */}}
{{ define "fonts" }}
	.fonts/**
{{ end }}

{{/* ignore these if no graphical environment is installed */}}
{{ if .headless }}
	{{ template "flatpak" }}
	{{ template "i3" }}
	{{ template "fonts" }}
	.bin/termfg
	.bin/openbrowser
	.bin/pwrshutdown
	.bin/pwrsuspend
	.bin/screensvr*
	.bin/setxkblayout
{{ else }}
	{{/* ignore these if flatpak is not installed */}}
	{{ if not (lookPath "flatpak") }}
		{{ template "flatpak" }}
	{{ end }}
	{{/* ignore these if i3 is not installed */}}
	{{ if not (lookPath "i3") }}
		{{ template "i3" }}
	{{ end }}
	{{/* ignore these if no font utiliy is installed */}}
	{{ if not (lookPath "fc-cache") }}
		{{ template "fonts" }}
	{{ end }}
{{ end }}

{{/* Git config; ignore if git is not installed */}}
{{ if not (lookPath "git") }}
	.gitconfig
{{ end }}
