{{- $colorscheme := "default" -}}
{{- if or (eq .colorscheme "selenized_light") (eq .colorscheme "selenized_dark") -}}
	{{- $colorscheme = "selenized" -}}
{{- else if or (eq .colorscheme "selenized_white") (eq .colorscheme "selenized_black") -}}
	{{- $colorscheme = "selenized_bw" -}}
{{- end -}}

{{- $background := "light" -}}
{{- if or (eq .colorscheme "selenized_light") (eq .colorscheme "selenized_white") -}}
	{{- $background = "light" -}}
{{- else if or (eq .colorscheme "selenized_dark") (eq .colorscheme "selenized_black") -}}
	{{- $colorscheme = "dark" -}}
{{- end -}}


" When started as 'evim', evim.vim will already have done these settings, bail out.
if v:progname =~? 'evim'
  finish
endif

" Get the defaults that most users want.
source $VIMRUNTIME/defaults.vim

if has('vms')
  set nobackup		" do not keep a backup file, use versions instead
else
  set backup		" keep a backup file (restore to previous version)
  if has('persistent_undo')
    set undofile	" keep an undo file (undo changes after closing)
  endif
endif

if &t_Co > 2 || has('gui_running')
  " Switch on highlighting the last used search pattern.
  set hlsearch
endif

" Put these in an autocmd group, so that we can delete them easily.
augroup vimrcEx
  au!

  " For all text files set 'textwidth' to 78 characters.
  autocmd FileType text setlocal textwidth=78
augroup END

" Add optional packages.
"
" The matchit plugin makes the % command work better, but it is not backwards compatible.
" The ! means the package won't be loaded right away but when plugins are
" loaded during initialization.
if has('syntax') && has('eval')
  packadd! matchit
endif

" If terminal supports truecolor, make use of it
if has('termguicolors') && ($COLORTERM ==# 'truecolor' || $COLORTERM ==# '24bit')
	set termguicolors
else
	set t_Co=16
endif

" Make use of the wonderful Selenized theme
colorscheme {{ $colorscheme }}
set background={{ $background }}

" Disable that pesky mouse
set mouse=

