# i3 config file (v4)
#
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!
# Config file can be re-generated by i3-config-wizard(3)

# Mod1 = Alt
# Mod4 = Win
# Uses Win as leader key
set $mod Mod4

# define workspaces
# note: must start with a number, else the workspace won't work
set $ws0 "0"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"
set $ws11 "11"
set $ws12 "12"
set $ws13 "13"

include workspaces.conf
include theme.conf
include bindings.conf
include applications.conf
include	multimedia.conf
include custom.conf

font pango:DejaVu Sans Mono 10

# Configure i3 behaviour
focus_follows_mouse no
focus_wrapping no
workspace_auto_back_and_forth no
focus_on_window_activation urgent
for_window [all] title_format "%title - %class"
floating_modifier $mod

