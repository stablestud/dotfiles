general {
	colors = true
	interval = 5
{{ if eq .colorscheme "black" }}
	color_good = "#70b433"
	color_degraded = "#dbb32d"
	color_bad = "#ed4a46"
{{ else if eq .colorscheme "white" }}
	color_good = "#1d9700"
	color_degraded = "#c49700"
	color_bad = "#d6000c"
{{ else if eq .colorscheme "light" }}
	color_good = "#489100"
	color_degraded = "#ad8900"
	color_bad = "#d2212d"
{{ else if eq .colorscheme "dark" }}
	color_good = "#75b938"
	color_degraded = "#dbb32d"
	color_bad = "#fa5750"
{{ end }}
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "volume master"
order += "tztime local"

{{- define "shape" }}
	min_width = 60
	align     = center
{{- end }}

ipv6 {
	format_up = "IPV6 %ip"
	format_down = ""
	{{ template "shape" }}
}

wireless _first_ {
	format_up = "WLAN (%essid) %ip (%bitrate)"
	format_down = ""
	{{ template "shape" }}
}

ethernet _first_ {
	format_up = "LAN %ip (%speed)"
	format_down = ""
	{{ template "shape" }}
}

battery all {
	format = "BAT %status %percentage %remaining"
	format_down = ""
	status_bat  = "DIS"
	integer_battery_capacity = true
	threshold_type = "percentage"
	low_threshold = "20"
	{{ template "shape" }}
}

disk "/" {
	format = "DISK %used/%total"
	threshold_type = percentage_free
	low_threshold = 10
	{{ template "shape" }}
}

load {
	format = "LOAD %1min"
	max_threshold = 4
	{{ template "shape" }}
}

memory {
	format = "MEM %used/%total"
	memory_used_method = classical
	threshold_degraded = "20%"
	threshold_critical = "10%"
	{{ template "shape" }}
}

volume master {
	device = "default"
	format = "VOL %volume"
	format_muted = "VOL %volume (muted)"
	{{ template "shape" }}
}

tztime local {
	format = "TIME %Y-%m-%d %H:%M:%S"
	{{ template "shape" }}
}

