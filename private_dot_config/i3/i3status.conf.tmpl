general {
	colors = true
	interval = 5
	color_good = "#70b433"
	color_degraded = "#dbb32d"
	color_bad = "#ed4a46"
	separator = " "
}

order += "volume master"
order += "ipv6"
{{- if .wireless }}
order += "wireless _first_"
{{- end }}
order += "ethernet _first_"
{{- if .battery }}
order += "battery all"
{{- end }}
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

ipv6 {
	format_up = "%ip"
	format_down = ""
}

wireless _first_ {
	format_up = "wlo: (%essid) %ip (%bitrate)"
	format_down = "wlo: down"
}

ethernet _first_ {
	format_up = "eth: %ip (%speed)"
	format_down = "eth: down"
}

battery all {
	format = "bat: %status %percentage %remaining"
	format_down = "bat: down"
	integer_battery_capacity = true
	threshold_type = "percentage"
	low_threshold = "20"
}

disk "/" {
	format = "disk: %used/%total"
	threshold_type = percentage_free
	low_threshold = 10
}

load {
	format = "load: %1min"
	max_threshold = 4
}

memory {
	format = "mem: %used/%total"
	memory_used_method = classical
	threshold_degraded = "20%"
	threshold_critical = "10%"
}

volume master {
	device = "default"
	format = "vol: (%devicename) %volume"
	format_muted = "vol: (%devicename) %volume (muted)"
}

tztime local {
	format = "%Y-%m-%d %H:%M:%S"
}

